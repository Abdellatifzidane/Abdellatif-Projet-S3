        <TextBox x:Name="password" Canvas.Left="317" TextWrapping="Wrap" Text="" Canvas.Top="231" Width="182" Height="37" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="Button" Canvas.Left="322" Canvas.Top="299" HorizontalAlignment="Center" VerticalAlignment="Top" Width="174" RenderTransformOrigin="0.5,0.5" Click="Login_Click" Height="41">
